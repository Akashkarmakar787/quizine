<% include ../partials/header%>

<p style="color:red">
	<%=message%>
</p>
<form action="/admin/aptitude" method="post">
	Question: <input type="text" name="question" placeholder="Enter your Question"><br>
	A: <input type="text" name="optionA" placeholder="Enter option 1"><br>
	B: <input type="text" name="optionB" placeholder="Enter option 2"><br>
	C: <input type="text" name="optionC" placeholder="Enter option 3"><br>
	D: <input type="text" name="optionD" placeholder="Enter option 4"><br>
	Answer: <select name="answer">
	<option value="A">A</option>
	<option value="B">B</option>
	<option value="C">C</option>
	<option value="D">D</option>
	</select>
	<br>
	<button>
		Submit
	</button>
</form>

